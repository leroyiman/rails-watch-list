<div class="display">
  <h1 style="margin: 20px 0;"><%= @list.name %>:</h1>
  <button type="button" class="btn btn-primary">
    <%= link_to 'Add a Movie to the list', new_list_bookmark_path(@list), class: 'font-color-white'%>
    </button>
</div>

<div class="cards">
  <% @list.movies.each do |list| %>
    <div class="card-trip">
      <img src= "<%=list.poster_url%>" />
      <div class="card-trip-infos">
        <div>
          <h2><%= list.title %></h2>
          <p><%= list.overview %></p>
        </div>
        <h2 class="card-trip-pricing"> Rating: <%= list.rating %> / 10<br>
        <%= link_to "Remove",
                  bookmark_path(),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></h2>
      </div>
    </div>
  <% end %>
</div>
