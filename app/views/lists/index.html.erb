
<div class="display">
  <h1 style="margin: 20px 0;">Hello, your Movie Lists are here!</h1>
  <button type="button" class="btn btn-primary">
    <%= link_to 'Add a List', new_list_path, class: 'font-color-white'%>
      </button>
</div>
<div class="cards">
  <% @lists.each do |list| %>
    <ul style="list-style-type:none;">
      <%= link_to list_path(list), class: 'custom' do %>
      <li>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(

          <% if list.photo.key.nil? %>
            <%= 'https://unsplash.com/photos/3f04FMm_Jqk' %>
          <% else %>
            <%= cl_image_path list.photo.key%>
          <% end %>

          <%# height: 300, width: 400, crop: :fill %>

          )">
          <%= list.name %>
        </div>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
